<p id="alert"><%= alert %></p>
<h1>Login</h1>

<div class="container" style="width: 50rem;">
  <%= form_tag sessions_path do |form| %>
    <div class="form-group">
      <%= label_tag :username, nil, style: "margin-top:2rem" %>
      <%= text_field_tag :username, nil, class:"form-control"  %>
    </div>
    <div class="form-group">
      <%= label_tag :password, nil, style: "margin-top:2rem" %>
      <%= password_field_tag :password, nil, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag "Login", class: "btn btn-success btn-block" %>
    </div>
  <% end %>
</div>