<% if notice %>
    <p id="notice" class="alert alert-success" style="margin-top: 2rem;"><%= notice %></p>
<% end %>
<% if current_user %>
    Logged in as <%= current_user.username %>.
<% else %>
    <h1 style="margin-top: 2rem; margin-bottom: 2rem;">Welcome. Please Login or Signup to Continue</h1>
    <%= link_to "Sign Up", signup_path, class:"btn btn-light" %> |
    <%= link_to "Log In", login_path, class:"btn btn-light" %>
<% end %>